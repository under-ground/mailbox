
<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Mailbox" status="INFO" monitorInterval="5" strict="true">
    <Appenders>
        <Console name="Console Appender">
            <PatternLayout disableAnsi="false">
                <Pattern>%d{HH:mm:ss.SSS} [%thread] %X %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </Console>
        <File name="File Appender" fileName="log/mailbox-log.log" createOnDemand="true">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%thread] %X %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console Appender"/>
            <!--<AppenderRef ref="File Appender"/>!-->
        </Root>

    </Loggers>
</Configuration>